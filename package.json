{
  "name": "job-hunting-manager",
  "version": "1.0.0",
  "description": "就活管理アプリ - Windows向けデスクトップアプリケーション",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test"
  },
  "keywords": [
    "job-hunting",
    "career",
    "management",
    "electron",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.11",
    "@types/keytar": "^4.4.0",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.2"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.3",
    "@mui/material": "^5.15.3",
    "@mui/x-date-pickers": "^6.18.7",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.6.2",
    "google-auth-library": "^10.5.0",
    "googleapis": "^166.0.0",
    "ical-generator": "^10.0.0",
    "keytar": "^7.9.0",
    "moment": "^2.30.1",
    "node-cron": "^3.0.3",
    "react": "^18.2.0",
    "react-big-calendar": "^1.10.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0",
    "react-router-dom": "^6.21.1",
    "react-window": "^2.2.3",
    "recharts": "^3.5.0",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.jobhunting.manager",
    "productName": "就活管理",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "sign": false
    },
    "portable": {
      "artifactName": "就活管理.exe"
    }
  }
}
