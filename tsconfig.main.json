{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "noEmit": false,
    "outDir": "dist",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "jsx": "preserve",
    "rootDir": "src"
  },
  "include": ["src/main/**/*", "src/database/**/*"],
  "exclude": ["node_modules", "dist"]
}
